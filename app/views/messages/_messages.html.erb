<% messages.each do |message| %>
  <% if message.role == "user" %>
    <div class="il-chat-row il-chat-row-user">
      <div class="il-chat-bubble il-chat-bubble-user">
        <div class="il-chat-meta">You</div>
        <div class="il-chat-content">
          <%= message.content %>
        </div>
      </div>
    </div>
  <% elsif message.role == "assistant" %>
    <div class="il-chat-row il-chat-row-assistant">
      <div class="il-chat-bubble il-chat-bubble-assistant">
        <div class="il-chat-meta">Insight Loop AI</div>
        <div class="il-chat-content">
          <%= message.content %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
