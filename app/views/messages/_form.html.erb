<%= simple_form_for [chat, message] do |f| %>
  <div class="mb-3">
    <label class="form-label small text-muted mb-1">
      Ask a question *
    </label>
    <%= f.input :content,
                as: :text,
                label: false,
                required: true,
                input_html: {
                  rows: 3,
                  placeholder: "How can I improve my operation based on this conversation?"
                } %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.button :submit,
                 'Ask LLM',
                 class: 'btn btn-primary px-4' %>
  </div>
<% end %>
