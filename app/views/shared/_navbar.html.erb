<nav class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid d-flex align-items-center">

    <!-- LEFT: Logo -->
    <div class="navbar-left">
      <%= link_to image_tag("insight_loop_logo_reduzido.png", alt: "InsightLoop"),
            home_path,
            class: "navbar-brand" %>
    </div>

    <!-- CENTER: Greeting + Date -->
    <% if user_signed_in? %>
      <div class="navbar-greeting">
        <div class="fw-bold" style="font-size: 1.1rem;">
          Bom dia, <%= current_user.name.presence || current_user.email.split("@").first.titleize %>
        </div>
        <div class="text-muted" style="font-size: 0.9rem;">
          <%= l(Date.today, format: :long).capitalize %>
        </div>
      </div>
